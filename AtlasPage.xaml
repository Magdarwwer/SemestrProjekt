<Page x:Class="SemestrProjekt.AtlasPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SemestrProjekt"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="AtlasPage">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="Images/AtlasScreenApp.png"  />
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="20" />
            <ColumnDefinition />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="180"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- View report button -->
        <Button Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" Click="Button_Click" Style="{StaticResource buttonStyle}" Margin="0,10.4,0,-0.2" VerticalAlignment="Top">View</Button>
    </Grid>
</Page>
